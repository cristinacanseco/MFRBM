<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/gris2">


        <LinearLayout
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:background="@color/colorVerdeFuerte"
            android:orientation="horizontal"
            ></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/imagen_btc"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/cactus" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="90dp"
                android:layout_marginStart="9dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/imagen_btc"
                android:background="@color/colorGrisOscuro"
                android:orientation="horizontal"></LinearLayout>

            <TextView
                android:id="@+id/tv_nombre_btr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="181dp"
                android:layout_marginTop="5dp"
                android:text="@string/nombreBitacora_B"
                android:textStyle="bold"
                android:ellipsize="end"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_id_bitacora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/light"
                android:text="1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_lugar_bitacora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="8dp"
                android:text="@string/ubicacion_B"
                android:textSize="12sp"
                android:layout_below="@+id/tv_nombre_btr"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/regular" />

            <TextView
                android:id="@+id/tv_numero_muestreos_bitacora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="8dp"
                android:text="5 muestreos"
                android:textSize="12sp"
                android:layout_below="@+id/tv_lugar_bitacora"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/regular"/>

            <TextView
                android:id="@+id/tv_fecha_bitacora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="8dp"
                android:text="13/05/2019 12:34"
                android:textSize="12sp"
                android:layout_below="@+id/tv_numero_muestreos_bitacora"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/regular"/>

        </RelativeLayout>

</androidx.cardview.widget.CardView>