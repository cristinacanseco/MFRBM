<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_imagen_mtr"
            android:src="@drawable/flores2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_nombre_mtr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="@string/nombreMuestreo"
            android:textColor="@color/cafe2"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_localizacion_mtr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="@string/ubicacion_B"
            android:fontFamily="@font/regular"
            android:textColor="@color/cafe2"
            android:layout_marginTop="10dp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>