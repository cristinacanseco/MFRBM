<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrisLetra"
    android:orientation="vertical"
    tools:context=".Sesiones.RegistroUsuario">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/cardview_compat_inset_shadow"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="26dp"
                android:layout_marginTop="19dp"
                app:srcCompat="@drawable/applogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:text="@string/titulo_RU"
                android:textColor="@color/colorAzulFuerte"
                android:textSize="35dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3.5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/colorAzulFuerte">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/imageCorreo_RU"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/et_correo_ru"
                        app:srcCompat="@drawable/email_35px_b" />

                    <EditText
                        android:id="@+id/et_correo_ru"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="30dp"
                        android:hint="@string/email_RU"
                        android:inputType="textEmailAddress"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/colorGrisLetra"
                        android:textColorHint="@color/colorGrisLetra"
                        android:outlineAmbientShadowColor="@color/colorBlanco"/>

                    <ImageView
                        android:id="@+id/imageClave_RU"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="90dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/et_clave_ru"
                        app:srcCompat="@drawable/password_35px_b" />

                    <EditText
                        android:id="@+id/et_clave_ru"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="90dp"
                        android:hint="@string/clave_RU"
                        android:inputType="textPassword"
                        android:outlineAmbientShadowColor="@color/colorBlanco"
                        android:textAlignment="center"
                        android:textColor="@color/colorGrisLetra"
                        android:textColorHint="@color/colorGrisLetra"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageClaveConfirmada_RU"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="150dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/et_clave_confirma_ru"
                        app:srcCompat="@drawable/password_35px_b" />

                    <EditText
                        android:id="@+id/et_clave_confirma_ru"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="150dp"
                        android:hint="@string/confirmarClava_RU"
                        android:inputType="textPassword"
                        android:outlineAmbientShadowColor="@color/colorBlanco"
                        android:textAlignment="center"
                        android:textColor="@color/colorGrisLetra"
                        android:textColorHint="@color/colorGrisLetra"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageNombreU_RU"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="210dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/et_nombre_ru"
                        app:srcCompat="@drawable/user_35px_b" />

                    <EditText
                        android:id="@+id/et_nombre_ru"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="210dp"
                        android:hint="@string/nombreUsuario_RU"
                        android:inputType="text"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textColor="@color/colorGrisLetra"
                        android:textColorHint="@color/colorGrisLetra"
                        android:outlineAmbientShadowColor="@color/colorBlanco"/>

                    <ImageView
                        android:id="@+id/imageApellU_RU"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="270dp"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@+id/et_apellido_ru"
                        app:srcCompat="@drawable/user_35px_b" />

                    <EditText
                        android:id="@+id/et_apellido_ru"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="270dp"
                        android:hint="@string/apellidoUsuario_RU"
                        android:inputType="text"
                        android:outlineAmbientShadowColor="@color/colorBlanco"
                        android:textAlignment="center"
                        android:textColor="@color/colorGrisLetra"
                        android:textColorHint="@color/colorGrisLetra"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/btn_crear_ru"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="-47dp"
                        android:layout_marginTop="360dp"
                        android:layout_toEndOf="@+id/imageCorreo_RU"
                        android:background="@color/colorNaranja"
                        android:hint="@string/crearCuenta_RU"
                        android:textAlignment="center"
                        android:textColorHint="@color/colorGrisLetra" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_weight=".5">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/colorAzulFuerte">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/preguntaComunidad_RU"
                        android:textColor="@color/colorGrisLetra"
                        android:textSize="18sp"
                         />

                    <TextView
                        android:id="@+id/tv_iniciar_sesion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginTop="39dp"
                        android:text="@string/iniciaSesion_RU"
                        android:textColor="@color/colorGrisLetra"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>