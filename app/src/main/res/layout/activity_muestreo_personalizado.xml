<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Muestreo.Muestreo_personalizado">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrisLetra"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAzulFuerte">

            <TextView
                android:id="@+id/tv_nombre_btr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="30dp"
                android:text="@string/misBitacoras_B"
                android:textColor="@color/colorBlanco"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageBuscar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@id/tv_nombre_btr"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="327dp"
                android:layout_marginLeft="264dp"
                android:layout_marginTop="33dp"
                android:src="@drawable/search_100px_white" />

            <ImageView
                android:id="@+id/imageOpciones"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@id/imageBuscar"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="379dp"
                android:layout_marginLeft="379dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/menu_vertical_100px_white" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorGrisFondos">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorGrisFondos">

                <ImageView
                    android:id="@+id/img_muestreo_personalizado"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/flor" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="175dp"
                    android:background="@color/colorBlanco"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_descripcion_bitacora_personalizada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/color" />

                    <TextView
                        android:id="@+id/tv_color_bitacora_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="44dp"
                        android:layout_toEndOf="@id/img_descripcion_bitacora_personalizada"
                        android:text="@string/color_B"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="240dp"
                    android:background="@color/colorGrisFondos"
                    android:padding="30dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="265dp"
                    android:background="@color/colorBlanco"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_dimension_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dimension" />

                    <TextView
                        android:id="@+id/tv_dimension_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="44dp"
                        android:layout_toEndOf="@id/img_dimension_muestreo_personalizado"
                        android:text="@string/dimension_B"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="330dp"
                    android:background="@color/colorGrisFondos"
                    android:padding="30dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="355dp"
                    android:background="@color/colorBlanco"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_localizacion_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:src="@drawable/ubicacion" />

                    <TextView
                        android:id="@+id/tv_localizacion_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="44dp"
                        android:layout_toEndOf="@id/img_localizacion_muestreo_personalizado"
                        android:text="@string/ubicacion_B"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="410dp"
                    android:background="@color/colorGrisFondos"
                    android:padding="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="435dp"
                    android:background="@color/colorBlanco"
                    android:padding="10dp">

                    <ImageView
                       android:id="@+id/img_textura_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/textura" />

                    <TextView
                        android:id="@+id/tv_textura_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="44dp"
                        android:layout_toEndOf="@id/img_textura_muestreo_personalizado"
                        android:text="@string/textura"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/sp_textura_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="250dp"></Spinner>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="500dp"
                    android:background="@color/colorGrisFondos"
                    android:padding="20dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="525dp"
                    android:background="@color/colorBlanco"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_forma_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/forma" />


                    <TextView
                        android:id="@+id/tv_forma_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="44dp"
                        android:layout_toEndOf="@id/img_forma_muestreo_personalizado"
                        android:text="@string/forma"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/sp_forma_muestreo_personalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="250dp"></Spinner>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="590dp"
                    android:background="@color/colorGrisFondos"
                    android:padding="20dp" />


            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>